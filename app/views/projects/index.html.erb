<div class="w-full">
  <% content_for :title, "Projects" %>

  <div class="flex justify-between items-center mb-5">
    <h1 class="font-bold text-4xl">Projects</h1>
    <%= link_to "New Project", new_project_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium hover:bg-blue-700 transition" %>
  </div>

  <% if @projects.any? %>
    <div id="projects" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-5">
      <% @projects.each do |project| %>
        <div class="p-4 border rounded-lg bg-white shadow-md">
          <h2 class="font-bold text-lg"><%= link_to project.title, project, class: "text-blue-600 hover:underline" %></h2>
          <p class="text-gray-600 truncate"><%= project.url %></p>
          <div class="mt-3 flex">
            <%= link_to "Show Project", project, class: "rounded-lg py-2 px-4 bg-gray-100 text-gray-800 inline-flex items-center justify-center font-medium hover:bg-gray-200 transition", style: "margin-right: 8px;" %>
            <%= link_to "Edit", edit_project_path(project), class: "rounded-lg py-2 px-4 bg-yellow-100 text-yellow-800 inline-flex items-center justify-center font-medium hover:bg-yellow-200 transition", style: "margin-right: 8px;" %>
            <%= button_to 'Delete', 
              project_path(project), 
              method: :delete,
              data: { turbo_confirm: 'Are you sure you want to delete this project?' }, 
              form: { style: "margin-right: 8px;" },
              class: "rounded-lg py-2 px-4 bg-red-100 text-red-800 inline-flex items-center justify-center font-medium hover:bg-red-200 transition" %>
          </div> 
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-gray-500 mt-5">No projects found. Start by creating a new project!</p>
  <% end %>
</div>
