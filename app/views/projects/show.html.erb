<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl"><%= @project.title %></h1>
  <%= link_to "Add a New Page", new_project_page_path(@project), class: "mt-5 inline-block rounded-lg py-2 px-4 bg-blue-600 text-white font-medium" %>
  <%= link_to "Edit Screenshot", edit_project_path(@project), class: "rounded-lg py-2 px-4 bg-yellow-100 text-yellow-800 font-medium hover:bg-yellow-200 transition" %>
  <%= link_to "Mark Up Page", mark_up_project_path(@project), class: "rounded-lg py-2 px-4 bg-gray-100 text-gray-800 inline-flex items-center justify-center font-medium hover:bg-gray-200 transition" %>
  <%= link_to "Back to Projects", projects_path, class: "mt-5 inline-block rounded-lg py-2 px-4 bg-gray-100 text-gray-800 font-medium" %>
  <p class="text-gray-600">URL: <%= @project.url %></p>
  <p class="text-gray-600">Screenshot:</p>
  <% if @project.screenshot.present? %>
    <img src="<%= @project.screenshot %>" alt="Screenshot of <%= @project.title %>" class="rounded-lg shadow-md mt-3">
    <%= link_to "Mark Up Screenshot", mark_up_project_path(@project), class: "mt-3 inline-block rounded-lg py-2 px-4 bg-green-600 text-white font-medium" %>
  <% end %>

  <h2 class="font-bold text-2xl mt-5">Pages</h2>
  <ul class="mt-3">
    <% @project.pages.each do |page| %>
      <li class="border-b py-2">
        <div class="flex justify-between items-center">
          <span><%= page.url %></span>
          <div class="flex space-x-2"> 
            <%= link_to "Mark Up Page", mark_up_project_page_path(@project, page), class: "rounded-lg py-2 px-4 bg-gray-100 text-gray-800 inline-flex items-center justify-center font-medium hover:bg-gray-200 transition", style: "margin-right: 8px;" %>
            <%= link_to "Edit", edit_project_page_path(@project, page), class: "rounded-lg py-2 px-4 bg-yellow-100 text-yellow-800 inline-flex items-center justify-center font-medium hover:bg-yellow-200 transition", style: "margin-right: 8px;" %>
            <%= button_to 'Delete', 
                project_page_path(@project, page), 
                method: :delete, 
                data: { turbo_confirm: 'Are you sure you want to delete this page?' }, 
                form: { style: "margin-right: 8px;" },
                class: "rounded-lg py-2 px-4 bg-red-100 text-red-800 inline-flex items-center justify-center font-medium hover:bg-red-200 transition" %>
          </div>
        </div>
        <% if page.screenshot.present? %>
          <img src="<%= page.screenshot %>" alt="Screenshot of <%= page.url %>" class="mt-2 rounded-lg shadow-md">
        <% end %>
      </li>
    <% end %>
  </ul>


  <%= link_to "Add a New Page", new_project_page_path(@project), class: "mt-5 inline-block rounded-lg py-2 px-4 bg-blue-600 text-white font-medium" %>

  <%= link_to "Back to Projects", projects_path, class: "mt-5 inline-block rounded-lg py-2 px-4 bg-gray-100 text-gray-800 font-medium" %>
</div>
