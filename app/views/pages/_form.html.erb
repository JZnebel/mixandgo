<%= form_with(model: [@project, @page], local: true, class: "contents", data: { controller: "form", action: "submit->form#showSpinner" }) do |form| %>  <% if @page.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(@page.errors.count, "error") %> prohibited this page from being saved:</h2>
      <ul>
        <% @page.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :url, class: "block text-gray-700" %>
    <%= form.text_field :url, class: "block shadow rounded-md border border-gray-400 outline-none focus:outline-blue-600 px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-2 px-4 bg-blue-600 text-white font-medium cursor-pointer" %>
  </div>

  <%= render "shared/spinner" %>
<% end %>
