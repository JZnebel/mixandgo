<h2 class="text-2xl font-bold text-center mb-6">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6 bg-white p-8 rounded shadow-lg max-w-md mx-auto" }) do |f| %>
  <div class="field">
    <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring focus:border-blue-300" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-4 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring focus:border-blue-300" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field flex items-center">
      <%= f.check_box :remember_me, class: "h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" %>
      <%= f.label :remember_me, class: "ml-2 text-sm text-gray-600" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "w-full px-4 py-2 bg-blue-600 text-white font-semibold rounded-lg shadow hover:bg-blue-700 focus:outline-none focus:ring focus:ring-blue-300" %>
  </div>
<% end %>

<div class="text-center mt-4">
  <%= render "devise/shared/links" %>
</div>
